{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true
  },
  "exclude": ["**/dist/*", "**/__tests__/**"]
}
